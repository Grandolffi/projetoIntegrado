<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Lista de Pacientes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body { background-color: #f8f9fa; }
    .btn-group-actions {
      display: flex;
      gap: 5px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lista de Pacientes Cadastrados</h5>
          </div>
          <div class="card-body">
            <table class="table table-bordered table-hover">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Nome</th>
                  <th>CPF</th>
                  <th>Data Nascimento</th>
                  <th>E-mail</th>
                  <th>Mãe</th>
                  <th>Celular</th>
                  <th>Gênero</th>
                </tr>
              </thead>
              <tbody>
                <% if (pacientes.length === 0) { %>
                  <tr><td colspan="8" class="text-center">Nenhum paciente encontrado.</td></tr>
                <% } else { %>
                  <% pacientes.forEach(paciente => { %>
                    <tr>
                      <td><%= paciente.id %></td>
                      <td><%= paciente.nome %></td>
                      <td><%= paciente.cpf %></td>
                      <td><%= new Date(paciente.dtnasc).toLocaleDateString('pt-BR') %></td>
                      <td><%= paciente.email %></td>
                      <td><%= paciente.nomemae %></td>
                      <td><%= paciente.numcelular %></td>
                      <td><%= paciente.genero %></td>
                    </tr>
                  <% }); %>
                <% } %>
              </tbody>
            </table>
            <div class="text-end">
              <a href="/" class="btn btn-secondary">Voltar</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
