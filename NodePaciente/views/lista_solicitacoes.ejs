<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Lista de Solicitações</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body { background-color: #f8f9fa; }
    .btn-group-actions {
      display: flex;
      gap: 5px;
    }
  </style>
</head>
<body>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Lista de Solicitações</h5>
        </div>
        <div class="card-body">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>ID Paciente</th>
                <th>Data Solicitação</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% if (solicitacoes.length === 0) { %>
                <tr><td colspan="4" class="text-center">Nenhuma solicitação encontrada.</td></tr>
              <% } else { %>
                <% solicitacoes.forEach(solicitacao => { %>
                  <tr>
                    <td><%= solicitacao.id %></td>
                    <td><%= solicitacao.paciente_id %></td>
                    <td><%= new Date(solicitacao.data_solicitacao).toLocaleDateString('pt-BR') %></td>
                    <td><%= solicitacao.status %></td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
          <div class="text-end">
            <a href="/" class="btn btn-secondary">Voltar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
