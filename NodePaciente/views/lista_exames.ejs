<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Lista de Exames</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body { background-color: #f8f9fa; }
    .btn-group-actions {
      display: flex;
      gap: 5px;
    }
  </style>
</head>
<body>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Lista de Exames</h5>
        </div>
        <div class="card-body">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>ID Laudo</th>
                <th>Nome Exame</th>
                <th>Tipo</th>
                <th>Valor Absoluto</th>
                <th>Valor de ReferÃªncia</th>
                <th>Paciente Registro</th>
                <th>Data do Exame</th>
              </tr>
            </thead>
            <tbody>
              <% if (exames.length === 0) { %>
                <tr><td colspan="8" class="text-center">Nenhum exame encontrado.</td></tr>
              <% } else { %>
                <% exames.forEach(exame => { %>
                  <tr>
                    <td><%= exame.id_exame %></td>
                    <td><%= exame.laudo_id %></td>
                    <td><%= exame.nome_exame %></td>
                    <td><%= exame.tipo_exame %></td>
                    <td><%= exame.valor_absoluto %></td>
                    <td><%= exame.valor_referencia %></td>
                    <td><%= exame.paciente_registro %></td>
                    <td><%= new Date(exame.data_hora_exame).toLocaleString('pt-BR') %></td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
          <div class="text-end">
            <a href="/" class="btn btn-secondary">Voltar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
