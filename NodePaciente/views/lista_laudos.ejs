<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Lista de Laudos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body { background-color: #f8f9fa; }
    .btn-group-actions {
      display: flex;
      gap: 5px;
    }
  </style>
</head>
<body>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Lista de Laudos</h5>
        </div>
        <div class="card-body">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>ID Solicitação</th>
                <th>ID Paciente</th>
                <th>Responsável Técnico</th>
                <th>Data Finalização</th>
                <th>Observações</th>
              </tr>
            </thead>
            <tbody>
              <% if (laudos.length === 0) { %>
                <tr><td colspan="6" class="text-center">Nenhum laudo encontrado.</td></tr>
              <% } else { %>
                <% laudos.forEach(laudo => { %>
                  <tr>
                    <td><%= laudo.id_laudo %></td>
                    <td><%= laudo.solicitacao_id %></td>
                    <td><%= laudo.paciente_id %></td>
                    <td><%= laudo.responsavel_tecnico %></td>
                    <td><%= new Date(laudo.data_finalizacao).toLocaleString('pt-BR') %></td>
                    <td><%= laudo.observacoes %></td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
          <div class="text-end">
            <a href="/" class="btn btn-secondary">Voltar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
